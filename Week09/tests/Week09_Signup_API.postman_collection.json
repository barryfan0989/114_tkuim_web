{
  "info": {
    "name": "Week09 Signup API",
    "_postman_id": "week09-signup-collection",
    "description": "Collection for Week09 signup API tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => pm.response.to.have.status(200));",
              "const js = pm.response.json();",
              "pm.test('body has status ok', () => pm.expect(js.status).to.eql('ok'));"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Signup (Success)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"測試同學\",\n  \"email\": \"test@example.com\",\n  \"phone\": \"0912345678\",\n  \"password\": \"abc12345\",\n  \"confirmPassword\": \"abc12345\",\n  \"interests\": [\"前端\",\"後端\"],\n  \"terms\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/signup",
          "host": ["{{baseUrl}}"],
          "path": ["api", "signup"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 201', () => pm.response.to.have.status(201));",
              "const res = pm.response.json();",
              "pm.test('Has participant', () => pm.expect(res).to.have.property('participant'));",
              "if (res.participant && res.participant.id) { pm.environment.set('lastId', res.participant.id); }"]
          }
        }
      ]
    },
    {
      "name": "Get All Signups",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/signup",
          "host": ["{{baseUrl}}"],
          "path": ["api", "signup"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": ["pm.test('Status is 200', () => pm.response.to.have.status(200));"] }
        }
      ]
    },
    {
      "name": "Delete Signup",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/signup/{{lastId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "signup", "{{lastId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": { "exec": ["pm.test('Status is 200', () => pm.response.to.have.status(200));"] }
        }
      ]
    },
    {
      "name": "Create Signup (Error)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"ErrUser\",\n  \"email\": \"err@example.com\",\n  \"phone\": \"1234\",\n  \"password\": \"short\",\n  \"confirmPassword\": \"short\",\n  \"interests\": [],\n  \"terms\": false\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/signup",
          "host": ["{{baseUrl}}"],
          "path": ["api", "signup"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 400', () => pm.response.to.have.status(400));",
              "pm.test('Has error message', () => pm.expect(pm.response.json()).to.have.property('error'));"
            ]
          }
        }
      ]
    }
  ]
}
